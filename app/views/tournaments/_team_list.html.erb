<div class="team-list">
    <h4 class="text-center m-0">Liste des Ã©quipes</h4>
    <i class="fas fa-eye-slash" data-controller="toggle" data-action="click->toggle#toggleDisplayNextElem"></i>
    <div class="teams-container mt-2">
        <%= render "team_header", tournement_coming: tournament.coming? %>
        <% tournament.teams.order(points: :desc).each_with_index do |team, i| %>
            <div class="team-row">
                <div class="text-center" style="flex: 0 0 5%;"><%= i + 1 %></div>
                <div class="text-center" style="<%= tournament.coming? ? "flex: 0 0 20%;" : "flex: 0 0 10%;" %>"><%= team.name %></div>
                <% team.users.order(created_at: :desc).each do |user| %>
                    <div class="text-center" style="flex: 0 0 20%;"><%= user.username %></div>
                <% end %>
                <% unless tournament.coming? %>
                    <div class="text-center" style="flex: 0 0 5%;"><%= team.points %></div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
