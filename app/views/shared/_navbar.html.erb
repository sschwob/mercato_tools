<div class="navbar navbar-expand-sm navbar-light navbar-design">
  <div class="container-fluid">
    <div class="d-flex align-items-center">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.png" %>
      <% end %>
      <% if user_signed_in? %>
        <div>Bienvenue, <%= current_user.username %></div>
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "paramètres", edit_user_registration_path(current_user) %>
          </li>
          <li class="nav-item">
            <%= link_to "déconnexion", destroy_user_session_path, data: { turbo_method: :delete } %>
          </li>
          <li class="nav-item avatar">
            <% if current_user.has_avatar? %>
              <%= image_tag current_user.avatar, class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
